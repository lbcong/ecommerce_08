
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label :category_id%>
      <%= f.text_field :category_id, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= user.label :address %>
      <%= user.text_field :address, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= user.label :password %>
      <%= user.password_field :password, class: "form-control", required: true %>
    </div>
    <div class="form-group" >
      <%= user.label :password_confirmation %>
      <%= user.password_field :password_confirmation, class: "form-control", required: true %>
    </div>
    <%= user.submit t("signup"), class: "btn btn-primary btn-block" %>
  <% end %>

