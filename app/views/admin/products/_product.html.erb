<tr>
  <td class="col-sm-4  order-info" id="receiver-info">
    <%= link_to product.name, product %>
  </td>
  <td class="col-sm-2 text-center">
    <%= image_tag product.image.url if product.image? %>
  </td>
  <td class="col-sm-2 text-center item-total-price ">
    <div id= "cart-item-total-description">
      <%= product.description %>
    </div>
  </td>
  <td class="col-sm-2 text-center">
      <%= product.price %>
  </td>
  <td class="col-sm-2 text-center">
    <%= link_to "",[:admin, product] ,class: "glyphicon glyphicon-trash" ,method: :delete,
      data: { confirm: t("you_sure") } %>
  </td>
</tr>
