<% provide :title, t("all_product") %>
<h1><%= t("all_product") %> </h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="text-center"><%= t("product_name") %></th>
      <th class="text-center"><%= t("image") %></th>
      <th class="text-center"><%= t("description") %></th>
      <th class="text-center"><%= t("price") %></th>
      <th class="text-center"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
    <%= will_paginate  %>
  </tbody>
</table>
